{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "deep-link:default",
    "deep-link:allow-get-current",
    "deep-link:allow-register",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "notification:default",
    "stronghold:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$APPDATA/**",
        "$LOCALAPPDATA/**",
        "$APPCONFIG/**",
        "$DATA/**",
        "$CACHE/**",
        "$TEMP/**"
      ]
    }
  ]
}

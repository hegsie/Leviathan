{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Leviathan",
  "version": "0.2.29",
  "identifier": "io.github.hegsie.leviathan",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Leviathan",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Leviathan Contributors",
    "copyright": "Copyright Â© 2024 Leviathan Contributors",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "createUpdaterArtifacts": true,
    "category": "DeveloperTool",
    "shortDescription": "Git GUI Client",
    "longDescription": "A fully-featured, open-source, cross-platform Git GUI client",
    "macOS": {
      "minimumSystemVersion": "11.0",
      "entitlements": "Entitlements.plist"
    },
    "windows": {
      "wix": null,
      "nsis": {
        "displayLanguageSelector": false,
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/hegsie/Leviathan/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI3MTNGRTQ2NTVGRUI5QzMKUldURHVmNVZSdjRUSnlkZHlCRWRtR0lxRVdMeFByU3JHRFlXNlQ4VmY2RUx2OUhGUFBmWW1ReUYK"
    }
  }
}
